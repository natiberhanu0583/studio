generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// For the auth to work

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  image     String?
  role      String    @default("USER")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  accounts  Account[]
  sessions  Session[]
}

enum Role {
  USER
  WAITER
  CHEF
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


// For the data to be stored


model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  imageId     String
  orderItems  OrderItem[]
}

model Usersclear {
  id    Int     @id @default(autoincrement())
  name  String
  role  String   // e.g., 'Admin', 'Waiter', 'Chef', 'Customer'
  phone String
  email String   @unique // Added unique constraint for email, assuming it's used for auth
}

model Order {
  id            Int       @id @default(autoincrement())
  customerName  String
  tableNumber   String    // Can be '-' for takeaway
  status        String    // e.g., 'Received', 'Sent to Chef', 'Preparing', 'Ready', 'Delivered'
  timestamp     DateTime  @default(now()) // Default to now, but can be set manually
  total         Float
  notes         String?
  paymentStatus String    // e.g., 'Pending', 'Paid'
  items         OrderItem[]
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  orderId     Int
  menuItemId  Int
  quantity    Int      @default(1)
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade) // Cascade delete for items
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id])
}